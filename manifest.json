{
  "manifest_version": 3,
  "name": "Smart School Helper",
  "version": "1.0.0",
  "description": "Автоматизація рутинних завдань на Smart School: порівняння розкладів, пошук вільних пар та генерація звітів для практичних робіт підгруп.",
  "permissions": [
    "storage",
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "https://admin-saceit.smart-school.com.ua/*"
  ],
  "background": {
    "service_worker": "background/service-worker.js"
  },
  "content_scripts": [
    {
      "matches": ["https://admin-saceit.smart-school.com.ua/*"],
      "js": [
        "utils/config.js",
        "utils/schedule-parser.js",
        "utils/schedule-comparator.js",
        "utils/report-generator.js",
        "content/content.js"
      ],
      "css": ["styles/overlay.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
